  <select id="queryMessageList" resultMap="dbHaMessageVo">
    SELECT
      a.TITLE,
      a.CONTENT,
      a.URL,
      c.NAME AS REVEIVE_NAME,
      b.NAME AS SEND_NAME,
      a.SEND_TIME,
      a.READ_TIME,
      CASE WHEN a.READ_STATUS = '2' THEN '已读' ELSE '未读' END AS READ_STATUS
    FROM
      t_ha_message a,
      t_ha_help_work_user b,
      t_ha_help_work_user c
    WHERE
      a.SEND_USER_ID = b.id
      AND a.RECEIVE_USER_ID = c.id
      AND a.DELETE_STATUS = '1'
    <if test="receiveId !=null and receiveId != ''">
      AND a.RECEIVE_USER_ID = #{receiveId}
    </if>
    <if test="sendId !=null and sendId != ''">
      AND a.SEND_USER_ID = #{sendId}
    </if>
    <if test="title !=null and title != ''">
      AND a.title like concat('%',#{title},'%')
    </if>
    ORDER BY a.SEND_TIME DESC
  </select>

